    private boolean emAdocao;
    private int anoNascimento;
    private double peso;
    private boolean temChip;
    private boolean estaFerido;


    public AdocaoCachorroExercicioMesa(String nome, String raca) {
        this.nome = nome;
        this.raca = raca;
